<p id="notice"><%= notice %></p>

<p>
    <strong>Title:</strong>
    <%= @post.title %>
</p>

<p>
    <strong>Content:</strong>
    <%= @post.content %>
</p>

<p>
    <strong>Program:</strong>
    <%= @post.program %>
</p>

<p>
    <strong>Like:</strong>
    <%= @post.like %>
</p>

<p>
    <strong>User:</strong>
    <%= @post.user %>
</p>

<% pre_like = @post.likes.find{ |like| like.user_id == current_user.id} %>
            <% if pre_like %>
                <%= link_to raw('<i class="fas fa-heart fa-3x" style="color: #ea2c62 ;"></i>'), post_like_path(@post, pre_like), method: :delete %>
            <% else %>
                <%= link_to raw('<i class="far fa-heart fa-3x" style="color: #aaaaaa ;"></i>'), post_likes_path(@post), method: :post %>
            <% end %>

<% if current_user.admin == true || current_user.id == post.user.id%>
    <td><%= link_to 'Edit', edit_post_path(post)%></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<%= link_to 'Back', posts_path %>
